{% extends 'base.html.twig' %}

{% block title %}Address
{% endblock %}

{% block body %}
	<h1>Address</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ address.id }}</td>
			</tr>
			<tr>
				<th>Street</th>
				<td>{{ address.street }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ address.city }}</td>
			</tr>
			<tr>
				<th>State</th>
				<td>{{ address.state }}</td>
			</tr>
			<tr>
				<th>Zip</th>
				<td>{{ address.zip }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_address_index') }}">
		<button class="btn btn-secondary">back to list</button>
	</a>

	<a href="{{ path('app_address_edit', {'id': address.id}) }}">
		<button class="btn btn-primary">
			edit
		</button>
	</a>

	{{ include('address/_delete_form.html.twig') }}
{% endblock %}
