{% extends 'base.html.twig' %}

{% block title %}Policy
{% endblock %}

{% block body %}
	<h1>Policy</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ policy.id }}</td>
			</tr>
			<tr>
				<th>PolicyNo</th>
				<td>{{ policy.policyNo }}</td>
			</tr>
			<tr>
				<th>PolicyStatus</th>
				<td>{{ policy.policyStatus }}</td>
			</tr>
			<tr>
				<th>PolicyType</th>
				<td>{{ policy.policyType }}</td>
			</tr>
			<tr>
				<th>PolicyEffectiveDate</th>
				<td>{{ policy.policyEffectiveDate ? policy.policyEffectiveDate|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>PolicyExpirationDate</th>
				<td>{{ policy.policyExpirationDate ? policy.policyExpirationDate|date('Y-m-d') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_policy_index') }}">
		<button class="btn btn-secondary">back to list</button>
	</a>

	<a href="{{ path('app_policy_edit', {'id': policy.id}) }}">
		<button class="btn btn-primary">
			edit
		</button>
	</a>

	{{ include('policy/_delete_form.html.twig') }}
{% endblock %}
